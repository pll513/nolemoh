@import "../_variables.styl"

$height-nav-link = 40px

.logo_link
  color $color-theme
  font-family "Raleway", serif

.nav
  color #555
  text-align center
  vertical-align middle
  font-family Athelas, STHeiti, "Microsoft Yahei", serif

.header-mobile
  display none

.header
  padding 24px 0
  height 100px

  .logo
    float left
    margin 0

  .logo_link
    font-size 44px

  .nav
    float right
    padding 10px 0 5px

    font-size 0
  .nav_link
    position relative
    display inline-block
    width 100px
    height 40px
    line-height 40px
    padding 0
    font-size 18px
    &:before
      position absolute
      top 0
      left 0
      width 100%
      height 1px
      content ""
      background $color-theme
      -webkit-transition top 0.3s
      -moz-transition top 0.3s
      -ms-transition top 0.3s
      -o-transition top 0.3s
      transition top 0.3s
    &:after
      position absolute
      top 0
      left 0
      width 1px
      height 1px
      content ""
      background $color-theme
      -webkit-transition height 0.3s
      -moz-transition height 0.3s
      -ms-transition height 0.3s
      -o-transition height 0.3s
      transition height 0.3s
    &:hover:before, &.active:before
      top 100%
    &:hover:after, &.active:after
      height 100%

@media (max-width: 767px)
  .header
    display none

  .header-mobile
    z-index 9
    position relative
    display block
    height 50px
    text-align center

    .pa.w.h
      z-index -1
      -webkit-box-shadow 0 2px 2px #ccc
      -moz-box-shadow 0 2px 2px #ccc
      box-shadow 0 2px 2px #ccc
      border-bottom 1px solid #ccc

  .logo
    z-index 1
    height 50px

  .logo_link
    height 50px
    line-height 50px
    font-size 32px

  .navbar-toggle
    border none
    padding 18px 10px
    width 50px
    height 50px
    background none
    -webkit-transition transform 0.3s
    -moz-transition transform 0.3s
    -ms-transition transform 0.3s
    -o-transition transform 0.3s
    transition transform 0.3s
    &:hover
      cursor pointer

  .navbar-toggle.active
    -webkit-transform rotate(90deg)
    -moz-transform rotate(90deg)
    -ms-transform rotate(90deg)
    -o-transform rotate(90deg)
    transform rotate(90deg)

  .icon-bar
    display block
    width 30px
    height 1px
    background $color-theme
    & + .icon-bar
      margin-top 12px

  .nav
    z-index -2
    position absolute
    top 50px
    left 0
    width 100%
    height 0
    overflow hidden
    background: #fff
    -webkit-transition height 0.3s
    -moz-transition height 0.3s
    -ms-transition height 0.3s
    -o-transition height 0.3s
    transition height 0.3s

  .nav.active
    height $height-nav-link * 3

  .nav_link
    display block
    height 40px
    line-height 40px
    border-bottom 1px solid #eee
